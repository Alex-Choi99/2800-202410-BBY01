      <form action="/signupSubmit" method="post">
        <h1 class="h3 mb-3 fw-normal">Sign Up</h1>

        <div class="form-floating">
          <input name="loginID" type="text" class="form-control" id="floatingInput" placeholder="Login ID">
          <label for="floatingInput">Login ID</label>
        </div>
        <div class="form-floating">
          <input name="email" type="email" class="form-control" id="floatingInput" placeholder="Email address">
          <label for="floatingInput">Email address</label>
        </div>
        <div class="form-floating">
          <input name="password" type="password" class="form-control" id="floatingPassword" placeholder="Password">
          <label for="floatingPassword">Password</label>
        </div>

