<head>
  <style>
    .signup-card {
      background-color: white;
      padding: 20px;
      border-radius: 8px;
    }
    .signup-form {
      margin-top: 75px; /* Adjusted to align the card near the 75% mark */
    }
  </style>
</head>

<%- include("templates/header") %>

<div style="display: flex; justify-content: center; align-items: flex-start; height: 100vh;">
  <div class="col-10 col-md-4 signup-card">
    <form action="/signupSubmit" method="post" class="signup-form">
      <h1 class="h3 mb-3 fw-normal text-center">Sign Up</h1>
      <div class="form-floating">
        <input name="name" type="text" class="form-control" id="floatingInput" placeholder="Name">
        <label for="floatingInput">Name</label>
      </div>
      <div class="form-floating">
        <input name="userId" type="text" class="form-control" id="floatingInput" placeholder="Login ID">
        <label for="floatingInput">Login ID</label>
      </div>
      <div class="form-floating">
        <input name="email" type="email" class="form-control" id="floatingInput" placeholder="Email address">
        <label for="floatingInput">Email address</label>
      </div>
      <div class="form-floating">
        <input name="password" type="password" class="form-control" id="floatingPassword" placeholder="Password">
        <label for="floatingPassword">Password</label>
      </div>
      <br>
      <button class="btn btn-primary w-100 py-2" type="submit">Submit</button>
    </form>
  </div>
</div>

<%- include("templates/footer_before_login") %>
