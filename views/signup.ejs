<%- include("templates/header") %>

<div class="d-flex justify-content-center flex-nowrap">
  <div class="col-10 col-md-4 genericFormDiv">
    <!-- Signup Form -->
    <form action="/signupSubmit" method="post">
      <h1 class="h3 mb-3 fw-normal">Sign Up</h1>
      
      <!-- Display error message when input is invalid -->
      <% if (typeof errorMessage !== 'undefined' && errorMessage) { %>
        <div class="alert alert-danger"><%= errorMessage %></div>
      <% } %>
      
      <!-- Name -->
      <div class="form-floating">
        <input name="name" type="text" class="form-control" id="floatingInput" placeholder="Name" min="2" max="30">
        <label for="floatingInput">Name *</label>
      </div>

      <!-- Login ID -->
      <div class="form-floating">
        <input name="userId" type="text" class="form-control" id="floatingInput" placeholder="Login ID" min="2" max="30">
        <label for="floatingInput">Login ID *</label>
      </div>

      <!-- Email Address -->
      <div class="form-floating">
        <input name="email" type="email" class="form-control" id="floatingInput" placeholder="Email address" min="5" max="50">
        <label for="floatingInput">Email address *</label>
      </div>

      <!-- Password -->
      <div class="form-floating">
        <input name="password" type="password" class="form-control" id="floatingPassword" placeholder="Password" min="3" max="50">
        <label for="floatingPassword">Password *</label>
      </div>
      <br>

      <!-- Submit Button -->
      <button class="btn btn-primary w-100 py-2" type="submit">Submit</button>
    </form>
  </div>
</div>

<%- include("templates/footer_before_login") %>