<body>

<!-- Include header.ejs -->
<%- include('templates/header.ejs') %>

<div class="container mt-5">
    <h1 class="text-center mb-4">Settings</h1>

    <!-- Settings options -->
    <div class="row">
        <div class="col-md-6">
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">Dark Mode</h5>
                    <p class="card-text">Toggle between light and dark mode.</p>
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="darkModeSwitch">
                        <label class="form-check-label" for="darkModeSwitch">Enable Dark Mode</label>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">Notifications</h5>
                    <p class="card-text">Toggle notifications on or off.</p>
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="notificationsSwitch">
                        <label class="form-check-label" for="notificationsSwitch">Enable Notifications</label>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Include footer.ejs -->
<%- include ("templates/footer_after_login") %>

