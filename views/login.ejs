<%- include("templates/header") %>
<% 
    // reusing /login page to display different template based on what user want when login
    switch(forgor) {
        case 'forgor':
            %>
            //asks what info did u forget
            <%- include("templates/forgorLogin") %>
            <% 
            break;
        case 'forgorID':
            %>
            //you forgot id
            <%- include("templates/forgorType", { forgorType: 'ID' }) %>
            <% 
            break;
        case 'forgorPW':
            %>
            //you forgot password
            <%- include("templates/forgorType", { forgorType: 'PW' }) %>
            <% 
            break;
        default:
            %>
            //user just got on login page
            <%- include("templates/normalLogin") %>
            <% 
    }
%>

  <div class="container d-flex justify-content-center flex-nowrap">
    <div class="col-10 col-md-4">
      <form action="/loginSubmit" method="post">
        <h1 class="h3 mb-3 fw-normal">Please sign in</h1>

        <div class="form-floating">
          <input name="email" type="email" class="form-control" id="floatingInput" placeholder="Email address">
          <label for="floatingInput">Email address</label>
        </div>
        <div class="form-floating">
          <input name="password" type="password" class="form-control" id="floatingPassword" placeholder="Password">
          <label for="floatingPassword">Password</label>
        </div>

        <div class="form-check text-start my-3">
          <input class="form-check-input" type="checkbox" value="remember-me" id="flexCheckDefault">
          <label class="form-check-label" for="flexCheckDefault">
            Remember me
          </label>
        </div>
        <button name="signIn" class="btn btn-primary w-100 py-2" type="submit">Sign in</button>
        <button name="resetPassword" class="btn btn-primary w-100 py-2" type="submit">Reset Password</button>
      </form>
    </div>
  </div>

<%- include("templates/footer") %>
