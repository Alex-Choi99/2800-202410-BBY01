<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>LearnXchange</title> <!-- Title will be dynamic based on the page -->
  <link rel="icon" type="image/x-icon" href="/images/favicon.ico">
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <!-- Font Awesome for icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
  <link rel="stylesheet" href="styles.css">
  <style>
    .dropdown-menu {
      max-height: 200px;
      overflow-y: auto;
    }
  </style>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/cloudinary-jquery@2.11.3/cloudinary-jquery.min.js"></script>
</head>
<body>
  <script type="text/javascript"> 
    $.cloudinary.config({ cloud_name: '<%= process.env.CLOUDINARY_CLOUD_NAME %>', secure: true});
  </script>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">
      <!-- Conditionally render the alert icon and hamburger menu -->

      <!-- Website Logo -->
      <a class="navbar-brand mx-auto" href="/">
        <img src="/images/Logo_BBY01.png" alt="Website Logo" width="120">
      </a>

      <!-- Conditionally render the navbar links -->
      <% if (locals.user) { %>
        <a class="navbar-brand" href="#">
          <i class="fas fa-bell"></i>
        </a>

        <!-- Hamburger Menu -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto">
            <!-- Navbar Links -->
            <li class="nav-item">
              <a class="nav-link btn btn-primary me-2" href="/profile">User Profile</a>
            </li>
            <li class="nav-item">
              <a class="nav-link btn btn-primary me-2" href="/aboutus">About Us</a>
            </li>
            <li class="nav-item">
              <a class="nav-link btn btn-primary me-2" href="/settings">Settings</a>
            </li>
            <li class="nav-item">
              <!-- Logout button -->
              <form action="/logout" method="post"><button class="nav-link btn btn-primary me-2">logout</button></form>
            </li>
          </ul>
        </div>
      <% } else { %>
          <a class="nav-link btn btn-primary me-2 py-2" href="/aboutus">About Us</a>
      <% } %>
    </div>
  </nav>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.11.6/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-ho+y8US3+Yb9GP+pCiH+3+sh2Ftah5MZsY3DZ/TuuT9oQXh1Ukr7nD7D5U5CVnE9" crossorigin="anonymous"></script>