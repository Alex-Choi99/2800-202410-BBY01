<div style="display: flex; justify-content: center; align-items: flex-start; height: 100vh;">
  <div class="col-10 col-md-4" style="background-color: white; padding: 20px; border-radius: 8px;">
    <form action="/loginSubmit" method="post">
      <h1 class="h3 mb-3 fw-normal text-center">Please Log In</h1>

      <div class="form-floating">
        <input name="loginID" type="text" class="form-control" id="floatingInput" placeholder="Email address">
        <label for="floatingInput">Email or ID</label>
      </div>
      <div class="form-floating">
        <input name="password" type="password" class="form-control" id="floatingPassword" placeholder="Password">
        <label for="floatingPassword">Password</label>
      </div>

      <br>
      <button class="btn btn-primary w-100 py-2" type="submit">Log in</button>
    </form>

    <div class="d-flex justify-content-center">
      <form action="/login?type=forgor" method="get">
        <div class="form-floating">
          <input name="type" type="hidden" class="form-control" value="forgor">
          <button class="btn btn-secondary btn-sm w-60 py-2 m-1" type="submit">Forgot login info?</button>
        </div>
      </form>
    </div>
  </div>
</div>
